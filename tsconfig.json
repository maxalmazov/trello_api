{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es2020",
    "lib": [],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "pretty": true,
  },
  "include": [
    "src",
    "servers"
  ]
}
